@model DocumentManager.MVC.ViewModels.EmployeeIndexViewModel

@{
    ViewData["Title"] = "Quản lý Nhân viên";
    var pagedResult = Model.PagedEmployees;
}

<h1>@ViewData["Title"]</h1>

<div class="row mb-3">
    <!-- Form tìm kiếm -->
    <div class="col-md-6">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" name="searchQuery" class="form-control" placeholder="Nhập tên, email, hoặc phòng ban..." value="@Model.SearchQuery">
                <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i> Tìm kiếm</button>
            </div>
        </form>
    </div>
    <!-- Nút tạo mới -->
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Thêm Nhân viên</a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.PagedEmployees.Items.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.PagedEmployees.Items.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.PagedEmployees.Items.First().DepartmentName)</th>
            <th style="width: 200px;">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in pagedResult.Items)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.DepartmentName)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-info">Sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-secondary">Chi tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Khu vực phân trang (Copy từ view của Department) -->
@if (pagedResult != null && pagedResult.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @{
                var prevDisabled = !pagedResult.HasPreviousPage ? "disabled" : "";
            }
            <li class="page-item @prevDisabled">
                <a class="page-link" asp-action="Index"
                   asp-route-pageNumber="@(pagedResult.PageNumber - 1)"
                   asp-route-pageSize="@pagedResult.PageSize"
                   asp-route-searchQuery="@Model.SearchQuery">Trước</a>
            </li>

            @for (int i = 1; i <= pagedResult.TotalPages; i++)
            {
                <li class="page-item @(i == pagedResult.PageNumber ? "active" : "")">
                    <a class="page-link" asp-action="Index"
                       asp-route-pageNumber="@i"
                       asp-route-pageSize="@pagedResult.PageSize"
                       asp-route-searchQuery="@Model.SearchQuery">@i</a>
                </li>
            }

            @{
                var nextDisabled = !pagedResult.HasNextPage ? "disabled" : "";
            }
            <li class="page-item @nextDisabled">
                <a class="page-link" asp-action="Index"
                   asp-route-pageNumber="@(pagedResult.PageNumber + 1)"
                   asp-route-pageSize="@pagedResult.PageSize"
                   asp-route-searchQuery="@Model.SearchQuery">Sau</a>
            </li>
        </ul>
    </nav>
}